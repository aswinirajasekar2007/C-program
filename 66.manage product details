#include <stdio.h>

struct Product {
    int id;
    char name[20];
    float price;
};

int main() {
    struct Product p;

    printf("Enter Product ID: ");
    scanf("%d", &p.id);
    printf("Enter Product Name: ");
    scanf("%s", p.name);
    printf("Enter Price: ");
    scanf("%f", &p.price);

    printf("\n--- Product Details ---\n");
    printf("ID: %d\nName: %s\nPrice: %.2f\n", p.id, p.name, p.price);

    return 0;
}
